<script>
    var controller = new ScrollMagic.Controller();
    
    // Start Main Scene
    new ScrollMagic.Scene({duration: 2300, triggerElement: "#sceneTrigger", offset: -100})
       .setPin("#scenePin")
       .addTo(controller);

    // Start TEXT display block
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 100, offset: 100})
       .setTween("#progressionText", 1, {display: "block"})
       .addTo(controller);
    // Start TEXT opacity 1
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 150})
       .setTween("#progressionText p", 1, {opacity: 1})
       .addTo(controller);

    // Start Device Animation
    var deviceTween = new TweenMax.to('#device', 1, {
       rotation: 90,
       x: 200,
       y: 100,
       width: 200
    });

    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", 
      duration: 200, 
      offset: 200})
       .setTween(deviceTween)
       .addTo(controller);

    var deviceTweenLit = new TweenMax.to('#deviceLit', 1, {
       opacity: 1
    });

    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", 
      duration: 200, 
      offset: 1700})
       .setTween(deviceTweenLit)
       .addTo(controller);
    

    

    // Start Aux Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 400, offset: 400})
       .setTween("#aux", 1, {paddingTop: "0", y: 60, opacity: 5})
       .addTo(controller);
    // Start Aux TEXT Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 600})
       .setTween("#textOne", 1, {color: "#87BEE0"})
       .addTo(controller);

    // Start Phone Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 600, offset: 800})
       .setTween("#phone", 1, {paddingTop: "0", y: -40})
       .addTo(controller);

    // Start Mouthpiece Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 400, offset: 1400})
       .setTween("#mouthpiece", 1, {x: -450, opacity: 1})
       .addTo(controller);
    // Start Mouthpiece TEXT Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 1400})
       .setTween("#textTwo", 1, {color: "#87BEE0"})
       .addTo(controller);

    // Start Blow TEXT Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 400, offset: 1700})
       .setTween("#textThree", 1, {color: "#87BEE0"})
       .addTo(controller);

    // Start Analyze Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 2100})
       .setTween("#analyzeScreen", 1, {opacity: 1})
       .addTo(controller);
    // Start Analyze TEXT Animation
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 2100})
       .setTween("#textFour", 1, {color: "#87BEE0"})
       .addTo(controller);


    // Start TEXT opacity fade 0
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 2500})
       .setTween("#progressionText p", 1, {opacity: 0})
       .addTo(controller);

    // Start Fade TEXT display none
    new ScrollMagic.Scene({triggerElement: "#sceneTrigger", duration: 200, offset: 2600})
       .setTween("#progressionText", 1, {display: "none"})
       .addTo(controller);





  </script>


